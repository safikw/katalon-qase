pipeline {
    agent any

    environment {
        QASE_PROJECT_CODE = "MKQ"                       // ganti project code Qase kamu
        QASE_API_TOKEN    = credentials('QASE_API_TOKEN') // simpan di Jenkins Credentials
        KATALON_API_KEY   = credentials('KATALON_API_KEY') // simpan juga di Jenkins Credentials
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/org/repo.git'
            }
        }

        stage('Create Qase Run') {
            steps {
                sh '''
                echo "ðŸ“¡ Creating new Qase run..."
                response=$(curl -s -X POST "https://api.qase.io/v1/run/$QASE_PROJECT_CODE" \
                  -H "Token: $QASE_API_TOKEN" \
                  -H "Content-Type: application/json" \
                  -d "{
                        \\"title\\": \\"Jenkins Run #$BUILD_NUMBER\\"
                      }")

                echo "$response" > qase_run.json
                runId=$(jq -r '.result.id' qase_run.json)
                echo "âœ… Created Qase Run ID = $runId"

                echo $runId > qase_run_id.txt
                '''
            }
        }

        stage('Run Katalon Tests') {
            steps {
                sh '''
                ./katalonc.sh -projectPath="/katalon/project" \
                  -testSuitePath="Test Suites/MySuite" \
                  -executionProfile="default" \
                  -browserType="Chrome" \
                  -apiKey=$KATALON_API_KEY
                '''
            }
        }

        stage('Send Results to Qase') {
            steps {
                sh '''
                runId=$(cat qase_run_id.txt)
                echo "ðŸ“¡ Sending results to Qase run $runId ..."
                # Contoh upload report ke Qase (pakai reporter plugin kalau ada)
                # Bisa diganti sama listener Katalon kalau kamu udah set
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'qase_run*.txt', followSymlinks: false
            junit '**/Reports/**/JUnit_Report.xml'
        }
    }
}
